{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}



{% block body %}
    <style>
        .listPosts{
            margin-top: 50px;
            display: grid;
            grid-template-columns: 1fr 1fr 1fr 1fr;
            gap: 50px;
        }

        .post{
            display: flex;
            flex-direction: column;
            border-style: solid;
            border-width: 2px;
            width: 100%;
            align-items: center;
            text-align: center;
        }
    </style>

    <div class="listPosts">
    {% for post in posts %}
        <div class="post">
            <p class="postContenu">{{ post.content | raw}}</p>
        </div>
    {% endfor %}
    </div>


{% endblock %}